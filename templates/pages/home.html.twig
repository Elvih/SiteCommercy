{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row flex" style="position: relative;">
        {% for Evenement in evenements %}
        <div class="col-10">
            <div class="mt-3 ml-4">
                <div class="row flex text-center justify-content-center w-100">
                    <div class="w-100 mt-5">
                        <div class="card flex-row flex-wrap border-dark">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-2 d-flex justify-content-start">
                                    {% if Evenement.fichierImage %}
                                        <img src="{{ vich_uploader_asset(Evenement, 'imageFile') | imagine_filter('thumb') }}" alt="Card image cap" style="width:150px;height:auto;">
                                        {% else %}
                                        <img src="{{ '/images/events/empty.jpg' | imagine_filter('thumb') }}" alt="Card image cap" style="width:150px;height:auto;">
                                    {% endif %}                                      
                                    </div>
                                    <div class="col-10">
                                        <h5 class="card-title">                                           
                                            {% if Evenement.Datefin < Evenement.Datedebut %}
                                                {{ Evenement.Nom}} le {{Evenement.Datedebut|date('d/m/Y')}}
                                            {% else %}
                                                {{ Evenement.Nom}} du {{Evenement.Datedebut|date('d/m/Y')}} au  {{Evenement.Datefin|date('d/m/Y')}}
                                            {% endif %}                                            
                                        </h5>
                                        <p class="card-text pt-2">{{ Evenement.Description}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        <aside class="col-2 card-element" style="padding-right: 0px;position:absolute; right:0;">
            <div class="card overflow-hidden" style="background-image: url(../images/ciel.jpg); background-size:cover;min-height:600px">
                <div class="card-body">
                    <h3 class="card-title" id="Nomville"></h3>
                    <h5>{{ today }} &nbsp; {{ heure }}</h5>
                    <h5></h5>
                    <div class="row">
                        <div class="col">
                            <img src="" alt="" id="icone" >
                        </div>
                        <div class="col">
                            <h3 id="TempActuelle" class="pt-2" style="font-weight:bold;"></h3>
                            <h5 id="Temps" class="pt-2" style="font-weight:bold;text-transform:uppercase"></h5>
                        </div>
                    </div>
                    <p class="card-text" id="TempMin" style="font-weight:bold;"></p>
                    <p class="card-text" id="TempMax" style="font-weight:bold;"></p>
                    <p class="card-text" id="Vent" style="font-weight:bold;"></p>
                    <p class="card-text" id="Humidite" style="font-weight:bold;"></p>
                </div>
                <hr class="hr-element">
                    <div class="card-body">
                        <h4 class="card-title">Horaires d'ouverture</h4>
                        <p class="card-text mt-4">Lundi au Vendredi : 8h - 12h / 14h - 16h</p>
                        <p class="card-text mt-4">Samedi : 9h - 12h</p>
                    </div>              
            </div>
        </aside> 
    </div>
    <footer>
        
    </footer>
</div>

{% endblock body %}
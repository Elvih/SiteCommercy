{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row flex">
        <div class="col-9">
            <div class="mt-3">
                <div class="row flex text-center justify-content-center w-100">
                    <div class="col-8 mt-5">
                        <div class="card flex-row flex-wrap">
                            <div class="card-header border-0 bg-transparent">
                                <img src="/images/Logo.jpg" alt="Card image cap" style="width: 100px;">
                            </div>
                            <div class="card-body pt-1">
                                <h5 class="card-title">
                                    Test
                                </h5>
                                <p class="card-text pt-2 text-left">Description de l'evenement</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <aside class="col-3 card-element" style="padding-right: 0px;">
            <div class="card overflow-hidden" style="background-image: url(../images/ciel.jpg); background-size:cover;">
                <div class="card-body">
                    <h3 class="card-title" id="Nomville"></h3>
                    <h5>{{ today }} &nbsp; {{ heure }}</h5>
                    <h5></h5>
                    <div class="row">
                        <div class="col">
                            <img src="" alt="" id="icone" >
                        </div>
                        <div class="col">
                            <h3 id="TempActuelle" class="pt-2" style="font-weight:bold;"></h3>
                            <h5 id="Temps" class="pt-2" style="font-weight:bold;text-transform:uppercase"></h5>
                        </div>
                    </div>
                    <p class="card-text" id="TempMin" style="font-weight:bold;"></p>
                    <p class="card-text" id="TempMax" style="font-weight:bold;"></p>
                    <p class="card-text" id="Vent" style="font-weight:bold;"></p>
                    <p class="card-text" id="Humidite" style="font-weight:bold;"></p>
                </div>
                <hr class="hr-element">
                    <div class="card-body">
                        <h4 class="card-title">Horaires d'ouverture</h4>
                        <p class="card-text mt-4">Lundi au Vendredi : 8h - 12h / 14h - 16h</p>
                        <p class="card-text mt-4">Samedi : 9h - 12h</p>
                    </div>              
            </div>
        </aside>
    </div>
</div>

{% endblock body %}
{% extends "base.html.twig" %}

{% block body %}

<div class="row w-100">
    <div class="col mt-5">
        <div id="menu">
            <div class="custom-control custom-radio custom-control-inline">
                <input id="streets-v11" type="radio" name="rtoggle" class="custom-control-input" value="streets" />
                <label class="custom-control-label" for="streets-v11">streets</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input id="light-v10" type="radio" name="rtoggle" class="custom-control-input" value="light" />
                <label class="custom-control-label" for="light-v10">light</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input id="dark-v10" type="radio" name="rtoggle" value="dark" class="custom-control-input"
                    checked="checked" />
                <label class="custom-control-label" for="dark-v10">dark</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input id="outdoors-v11" type="radio" name="rtoggle" class="custom-control-input" value="outdoors" />
                <label class="custom-control-label" for="outdoors-v11">outdoors</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input id="satellite-v9" type="radio" name="rtoggle" class="custom-control-input" value="satellite" />
                <label class="custom-control-label" for="satellite-v9">satellite</label>
            </div>
        </div>
        <div id="map">
        </div>
    </div>
    <div class="col mt-5">
        <form>
            
            <div class="row justify-content-center">
                {{ form_start(form) }}
                <div class="form-group col-md-10" style="font-weight: bold;">
                    <div class="col">{{ form_row(form.Nom) }}</div>
                </div>
                <div class="form-group col-md-10" style="font-weight: bold;">
                    <div class="col">{{ form_row(form.Prenom) }}</div>
                </div>
                <div class="form-group col-md-10" style="font-weight: bold;">
                    <div class="col">{{ form_row(form.Email) }}</div>
                </div>
                <div class="form-group col-md-10" style="font-weight: bold;">
                    <div class="col">{{ form_row(form.Message) }}</div>
                    <button class="btn btn-primary ml-3">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
            
        </form>
    </div>
</div>

<footer>
    <div class="row w-100">
        <div class="col">
            {% for message in app.flashes('success') %}
        <div class="alert alert-success">
        {{message}}
        </div>
       {% endfor %}
            <div>Ecrivez-nous</div>
            <div>Adresse :</div>
            <div>Mairie de Commercy</div>
            <div>Château Stanislas, 55200 Commercy</div>
        </div>
        <div class="col">
            <div>Contactez-nous</div>
            <div>Téléphone : 03 29 91 02 18</div>
            <div>Heures d'ouverture :</div>
            <div>Lundi au Vendredi : 8h - 12h / 14h - 16h</div>
            <div>Samedi : 9h - 12h</div>
        </div>
        <div class="col">
            <div>Abonnez-vous</div>
            <div>Saisissez vos adresse email pour recevoir les actualités du village !</div>
            <div>
                <input type="text" name="" id="" placeholder="Adresse email">
            </div>
            <div>
                <button>M'abonner</button>
            </div>
            
        </div>
    </div>
</footer>

{% endblock body %}
